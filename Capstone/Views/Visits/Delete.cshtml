@model Capstone.Models.Visit

@{
    ViewData["Title"] = "Delete";
}

<h1>Wait!</h1>

<h3>Are you sure you want to delete this visit  to @Html.DisplayFor(model => model.Zoo.Name) from your history?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Comments)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comments)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="VisitId" />
        <input type="submit" value="Delete" class="btn btn-outline-info" /> 
        <a class="btn btn-outline-info" asp-action="Index">Cancel</a>
    </form>
</div>
