@model IEnumerable<Capstone.Models.Visit>

@{
    ViewData["Title"] = "Index";
}

<h1>Visit History</h1>

@*<p>
    <a asp-action="Create">Record A Visit</a>
</p>*@
<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zoo)
            </th>
            <th>
                Location
            </th>
        </tr>
    </thead>
    <tbody class="table">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zoo.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zoo.City), @Html.DisplayFor(modelItem => item.Zoo.State)
            </td>
            <td>
                <a class="btn" asp-action="Details" asp-route-id="@item.VisitId"><i class="fas fa-info-circle"></i></a>
                </td>
            <td>
                <a class="btn" asp-action="Delete" asp-route-id="@item.VisitId"><i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
