@model IEnumerable<Capstone.Models.Zoo>

@{
    ViewData["Title"] = "Search";
}

<h1>Search Results</h1>

@if (Model.Count() == 0)
{
    <h3>Sorry, no zoos match your search</h3>
}
else
{
<h6>(@Model.Count() Results)</h6>

<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Location
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="table">
@foreach (var item in Model)
{
        <tr>
            <td>
                <a class="btn btn-plain" href="@Html.DisplayFor(modelItem => item.WebsiteURL)" target="_blank">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City), @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @* placing this in a form instead of an <a> allows it to be a true POST request, while as an <a> it would be a GET request creating data which is not good practice *@
                <form asp-action="Create" asp-controller="WishlistItems" asp-route-id="@item.ZooId"><button type="submit" class="btn btn-plain"><i class="fas fa-star"></i></button></form>
            </td>
            <td>
                <a class="btn btn-plain" asp-action="Create" asp-controller="TripItems" asp-route-id="@item.ZooId"><i class="fas fa-plus"></i> Trip</a>
            </td>
            <td>
                <a class="btn btn-plain" asp-action="Create" asp-controller="Visits" asp-route-id="@item.ZooId"><i class="fas fa-check"></i> Visited</a>
            </td>
        </tr>
}
    </tbody>
</table>
}
