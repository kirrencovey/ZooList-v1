@model Capstone.Models.TripItem

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete @Html.DisplayFor(model => model.Zoo.Name) from @Html.DisplayFor(model => model.Trip.Name)?</h3>

<div>

    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TripItemId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-controller="Trips">Back to Trips</a>
    </form>
</div>
